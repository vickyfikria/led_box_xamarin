<AbsoluteLayout xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ledbox.StatusBarView"
             BackgroundColor="#333333"
             HeightRequest="50" VerticalOptions="End" HorizontalOptions="FillAndExpand">




    <StackLayout Orientation="Horizontal"  VerticalOptions="Center" BackgroundColor="#111111" Padding="10" >
        <Image x:Name="img_device" Source="ic_wifi_white_24dp" IsVisible="True" HorizontalOptions="Start" />
            <Label x:Name="label_device" Text="Device" IsVisible="True" TextColor="#FFFFFF" HorizontalOptions="StartAndExpand" />
        
        <Label x:Name="label_account" Text="Account" IsVisible="True" TextColor="#FFFFFF" HorizontalOptions="EndAndExpand"/>
            <Image Source="ic_account_circle_white_24dp.png" IsVisible="True" HorizontalOptions="End"/>        
     </StackLayout>
    
    
    
</AbsoluteLayout>
 